@page
@model Tickets.Web.Pages.Ticket_Pages.DeleteModel
@{
}

<div class="mx-auto" style="width:1100px;">
    <h1>Details</h1>
    <h4>Ticket #@Model.Ticket.Id</h4>
    <hr />
    <dl class="row">



        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Ticket.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ticket.Title)
        </dd>
        <dt class="col-sm-2">

            @Html.DisplayNameFor(model => model.Ticket.Priority)
        </dt>
        <dd class="col-sm-10">

            @Model._ticketAppService.GetPriority(Model.Ticket).Type
        </dd>
        <dt class="col-sm-2">

            @Html.DisplayNameFor(model => model.Ticket.Type)
        </dt>
        <dd class="col-sm-10">

            @Model._ticketAppService.GetType(Model.Ticket).Type
        </dd>
        <dt class="col-sm-2">

            @Html.DisplayNameFor(model => model.Ticket.State)
        </dt>
        <dd class="col-sm-10">

            @Model._ticketAppService.GetState(Model.Ticket).Type
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Ticket.CreatedOn)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ticket.CreatedOn)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Ticket.CreatedBy)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ticket.CreatedBy)
        </dd>
        @if (Model.Ticket.UpdatedOn != null)
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Ticket.UpdatedBy)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Ticket.UpdatedBy)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Ticket.UpdatedOn)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Ticket.UpdatedOn)
            </dd>

        }

    </dl>

    <div asp-action="Delete">
        <input type="submit" value="Delete" class="btn btn-danger" asp-route-id="@Model.Ticket.Id" />
        <a asp-page="Index" class="btn btn-outline-dark">Back to List</a>
    </div>

</div>
