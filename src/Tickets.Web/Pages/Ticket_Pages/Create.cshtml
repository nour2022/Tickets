@page
@model Tickets.Web.Pages.Ticket_Pages.CreateModel
@{
}
<div class="mx-auto" style="width:1100px;">
    <h1>Create New Ticket</h1>
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create" enctype="multipart/form-data">
                @if (ViewBag.Message != null)
                {
                    <h5 class="alert alert-danger">@ViewBag.Message</h5>
                }
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Ticket.Title" class="control-label"></label>
                    <input asp-for="Ticket.Title" class="form-control" />
                    <span asp-validation-for="Ticket.Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Ticket.Description" class="control-label"></label>
                    <input asp-for="Ticket.Description" class="form-control" />
                    <span asp-validation-for="Ticket.Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Project</label>
                    <select asp-for="Ticket.ProjectId" asp-items="@(new SelectList(Model.Projects,"Id","Title"))">
                        <option value=" ">Select Project</option>

                    </select>
                </div>
                <div class="form-group">
                    <label class="control-label">Priority</label>
                    <select asp-for="Ticket.PriorityId" asp-items="Html.GetEnumSelectList<Tickets.Domain.Entities.PriorityType>()">
                        <option value=" ">Select Status</option>

                    </select>
                </div>
                <div class="form-group">
                    <label class="control-label">State</label>
                    <select asp-for="Ticket.StateId" asp-items="Html.GetEnumSelectList<Tickets.Domain.Entities.StateType>()">
                        <option value=" ">Select State</option>
                    </select>
                </div>
                <div class="form-group">
                    <label class="control-label">Ticket Type</label>
                    <select asp-for="Ticket.TickeTypeId" asp-items="Html.GetEnumSelectList<Tickets.Domain.Entities.Issue>()">
                        <option value=" ">Select Status</option>
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="Ticket.CreatedBy" class="control-label"></label>
                    <input asp-for="Ticket.CreatedBy" class="form-control" />
                    <span asp-validation-for="Ticket.CreatedBy" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="File" class="control-label"></label>
                    <input asp-for="File" type="file" name="File" class="form-control" />
                    <span asp-validation-for="File" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" asp-route-Ticket="@Model.Ticket" />
                    <a asp-page="Index" class="btn btn-outline-dark">Back to List</a>
                </div>
            </form>
        </div>
    </div>

</div>