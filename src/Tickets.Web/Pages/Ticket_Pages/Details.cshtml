@page
@model Tickets.Web.Pages.Ticket_Pages.DetailsModel
@{
}


<div class="mx-auto" style="width:1100px;">
    <h1>Details</h1>
    <h4>Project #@Model.Ticket.Id</h4>
    <hr />
    <dl class="row">

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Ticket.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ticket.Title)
        </dd>
        <dt class="col-sm-2">

            @Html.DisplayNameFor(model => model.Ticket.Priority)
        </dt>
        <dd class="col-sm-10">

            @Model._ticketAppService.GetPriority(Model.Ticket).Type
        </dd>
        <dt class="col-sm-2">

            @Html.DisplayNameFor(model => model.Ticket.Type)
        </dt>
        <dd class="col-sm-10">

            @Model._ticketAppService.GetType(Model.Ticket).Type
        </dd>
        <dt class="col-sm-2">

            @Html.DisplayNameFor(model => model.Ticket.State)
        </dt>
        <dd class="col-sm-10">

            @Model._ticketAppService.GetState(Model.Ticket).Type
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Ticket.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ticket.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Ticket.Project)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ticket.Project.Title)
        </dd>


        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Ticket.CreatedBy)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ticket.CreatedBy)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Ticket.CreatedOn)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ticket.CreatedOn)
        </dd>

        @if (Model.Ticket.UpdatedOn != null)
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Ticket.UpdatedBy)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Ticket.UpdatedBy)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Ticket.UpdatedOn)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Ticket.UpdatedOn)
            </dd>

        }
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Ticket.TicketAttachment)
        </dt>
        <div class="mx-auto" style="width:800px;">
            @if (Model.Attachments != null)
            {
                foreach (var attachment in Model.Attachments)
                {
                    <dd class="col-sm-10">
                        @if (attachment.Extention == "image/jpeg")
                        {<img width="250" height="200" src="~/Ref/@attachment.Name" /> }
                        else if (attachment.Extention == "application/pdf")
                        {
                            <embed asp-action="GetFile" src="~/Ref/@attachment.Name" style="width:100%; height:800px;">
                        }

                    </dd>
                }
            }
            else
            {
                <dd class="col-sm-10">
                    No Attachment Found!
                </dd>
            }

        </div>
    </dl>
    <div>

        <a asp-page="Edit" asp-route-id="@Model.Ticket.Id" class="btn btn-primary">Edit</a>

        <a asp-page="Index" class="btn btn-outline-dark">Back to List</a>
    </div>

</div>
