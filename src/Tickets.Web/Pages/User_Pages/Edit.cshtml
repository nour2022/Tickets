@page
@model Tickets.Web.Pages.User_Pages.EditModel
@{
}
<div class="container">
    <div class="row gutters">
        <div class="col-xl-3 col-lg-3 col-md-12 col-sm-12 col-12">
            <div class="card0 h-100">
                <div class="card-body">
                    <div class="account-settings">
                        <div class="user-profile">
                            <div class="user-avatar">
                                @if (@Model.User.ProfileImage == null)
                                {
                                    <img src="~/Ref/user.png" class="img-radius" alt="User-Profile-Image">
                                }
                                else
                                {
                                    <img src="~/Ref/@Model.User.ProfileImage" class="img" alt="User-Profile-Image">
                                }
                            </div>
                            <h5 class="user-name">@Model.User.UserName</h5>
                            <h6 class="user-email">@Model.User.Email</h6>
                            <a class="btn btn-danger" asp-page="ResetPassword" asp-route-id="@Model.User.Id">Reset Password</a>
                        </div>
                      
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-9 col-lg-9 col-md-12 col-sm-12 col-12">
            <div class="card0 h-100">
                <div class="card-body">
                    <div class="row gutters">
                        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                            <h6 class="mb-2 text-primary">Edit Personal Details</h6>
                        </div>
                        <form asp-action="Edit" enctype="multipart/form-data">
                           
                                <div class="form-group">
                                    <label>Full Name</label>
                                    <input asp-for="@Model.User.FullName" type="text" class="form-control" id="fullName" placeholder="Enter full name">
                                </div>
                           
                           
                                <div class="form-group">
                                    <label>Email</label>
                                    <input asp-for="@Model.User.Email" type="email" class="form-control" id="eMail" placeholder="Enter email">
                                </div>
                           
                                <div class="form-group">
                                    <label>Phone</label>
                                    <input asp-for="@Model.User.PhoneNumber" type="text" class="form-control" id="phone" placeholder="Enter phone number">
                                </div>
                           
                            <div class="form-group">
                                 <a asp-page="Index" class="btn btn-outline-dark">Back to List</a>
                                        <input  type="submit" value="Update" class="btn btn-primary" asp-route-id="@Model.User.Id" />
                                    </div>
                               
                           
                        </form>
                </div>
            </div>
        </div>
    </div>
</div> </div>